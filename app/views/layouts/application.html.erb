<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Agile Champ" %></title>
    <meta name="description" content="">
    <meta name="author" content="">
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= yield(:head) %>
  </head>
  <body>
    <header class="navbar navbar-fixed-top">
    <nav class="navbar-inner">
    <div class="container">
      <%= render 'layouts/navigation' %>
    </div>
    </nav>
    <nav class="sub">
    <div class="container">
      <%= yield :nav_buttons %>
    </div>
    </nav>
    </header>
    <div class="container">
               <ul class="breadcrumb">
            <%= yield :breadcrumbs %>
          </ul>
      <div class="row">
        <div class="span8">
          <%= yield %>
        </div>
        <div class="span4">
          <%= yield :aside %>
        </div>
      </div>
    </div>
  </body>
</html>
